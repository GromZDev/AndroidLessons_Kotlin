<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/film_details_fragment"
    android:background="@color/detail_fragment_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iw_film_image"
        android:layout_width="410dp"
        android:layout_height="580dp"
        android:contentDescription="@string/film_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/FilmNameDescriptionFragment"
        android:id="@+id/tw_film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/receiving_data"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iw_film_image"
        tools:text="Film Name" />

    <ImageView
        style="@style/FilmAttributesIconDescriptionFragment"
        android:id="@+id/rating_image_description_fragment"
        android:background="@drawable/ic_film_rating"
        android:contentDescription="@string/film_rating_image"
        app:layout_constraintBottom_toTopOf="@+id/tw_film_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/FilmAttributesTextDescriptionFragment"
        android:id="@+id/tw_film_rating"
        app:layout_constraintStart_toEndOf="@id/rating_image_description_fragment"
        app:layout_constraintTop_toTopOf="@id/rating_image_description_fragment"
        tools:text="Film Rating" />

    <ImageView
        style="@style/FilmAttributesIconDescriptionFragment"
        android:id="@+id/time_length_image_description_fragment"
        android:background="@drawable/ic_film_time_length"
        android:contentDescription="@string/film_rating_image"
        app:layout_constraintBottom_toTopOf="@id/rating_image_description_fragment"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/FilmAttributesTextDescriptionFragment"
        android:id="@+id/tw_film_time"
        app:layout_constraintStart_toEndOf="@id/time_length_image_description_fragment"
        app:layout_constraintTop_toTopOf="@id/time_length_image_description_fragment"
        tools:text="Film Time" />


    <ImageView
        style="@style/FilmAttributesIconDescriptionFragment"
        android:id="@+id/film_year_image_description_fragment"
        android:background="@drawable/ic_film_year"
        android:contentDescription="@string/film_year_icon"
        app:layout_constraintBottom_toTopOf="@id/time_length_image_description_fragment"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/FilmAttributesTextDescriptionFragment"
        android:id="@+id/tw_film_year"
        app:layout_constraintStart_toEndOf="@id/film_year_image_description_fragment"
        app:layout_constraintTop_toTopOf="@id/film_year_image_description_fragment"
        tools:text="Film Year" />

    <TextView
        android:id="@+id/tw_film_description"
        android:scrollbars = "vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iw_film_image"
        tools:text="Film Description" />


</androidx.constraintlayout.widget.ConstraintLayout>