<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="192dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">

    <FrameLayout
        android:id="@+id/item_cat_frame"
        android:layout_width="120dp"
        android:layout_height="192dp"
        android:background="@drawable/item_category_recycler_background"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/child_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="Text View" />
    </FrameLayout>

    <ImageView
        android:id="@+id/film_category_imageView"
        android:layout_width="110dp"
        android:layout_height="156dp"
        android:contentDescription="TODO"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_cat_frame" />

</androidx.constraintlayout.widget.ConstraintLayout>